<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="860.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.EmulatorController">

   <VBox spacing="15" AnchorPane.topAnchor="15" AnchorPane.bottomAnchor="15"
         AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">

      <!-- 1. Блок с кодом и кнопками -->
      <BorderPane style="-fx-background-color: #f8f8f8; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-background-radius: 8;">
         <center>
            <VBox spacing="10" alignment="CENTER">
               <Label text="Code" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
               <TextArea fx:id="codeTextArea" prefHeight="220.0" VBox.vgrow="ALWAYS"
                         style="-fx-font-family: Consolas; -fx-font-size: 20;"/>
               <HBox alignment="CENTER" spacing="20">
                  <Button fx:id="loadIntoMemoryButton" text="LOAD CODE" prefWidth="140"/>
                  <Button fx:id="startButton" text="EXECUTE" prefWidth="110"/>
                  <Button fx:id="nextButton" text="NEXT" prefWidth="80"/>
                  <Button fx:id="resetButton" text="RESET" prefWidth="80"/>
               </HBox>
            </VBox>
         </center>
         <padding><Insets top="15" right="30" bottom="15" left="30"/></padding>
      </BorderPane>

      <!-- 2. Три колонки: Integer | Float | Memory -->
      <HBox spacing="15" VBox.vgrow="ALWAYS">

         <!-- Integer Registers -->
         <VBox spacing="8" HBox.hgrow="ALWAYS" style="-fx-background-color: #f0f8ff; -fx-border-color: #aaa; -fx-border-radius: 6; -fx-background-radius: 6;">
            <Label text="INTEGER REGS" alignment="CENTER" style="-fx-font-family: Consolas; -fx-font-weight: bold; -fx-font-size: 14;"/>
            <ListView fx:id="intRegsListView" VBox.vgrow="ALWAYS"
                      style="-fx-font-family: Consolas; -fx-font-size: 13; -fx-control-inner-background: #f8fdff; "/>
            <padding><Insets top="10" right="15" bottom="15" left="15"/></padding>
         </VBox>

         <!-- Float Registers -->
         <VBox spacing="8" HBox.hgrow="ALWAYS" style="-fx-background-color: #fff8f0; -fx-border-color: #aaa; -fx-border-radius: 6; -fx-background-radius: 6;">
            <Label text="FLOAT REGS" alignment="CENTER" style="-fx-font-family: Consolas; -fx-font-weight: bold; -fx-font-size: 14;"/>
            <ListView fx:id="floatRegsListView" VBox.vgrow="ALWAYS"
                      style="-fx-font-family: Consolas; -fx-font-size: 13; -fx-control-inner-background: #fffdf8;"/>
            <padding><Insets top="10" right="15" bottom="15" left="15"/></padding>
         </VBox>

         <!-- Memory (теперь такой же стиль и размер) -->
         <VBox spacing="8" HBox.hgrow="ALWAYS" style="-fx-background-color: #f0fff0; -fx-border-color: #aaa; -fx-border-radius: 6; -fx-background-radius: 6;">
            <Label text="MEMORY" alignment="CENTER" style="-fx-font-family: Consolas; -fx-font-weight: bold; -fx-font-size: 14;"/>
            <ListView fx:id="memoryListView" VBox.vgrow="ALWAYS"
                      style="-fx-font-family: Consolas; -fx-font-size: 13; -fx-control-inner-background: #f8fff8; -fx-alignment: CENTER;"/>
            <padding><Insets top="10" right="15" bottom="15" left="15"/></padding>
         </VBox>

      </HBox>

      <!-- 3. Program Counter (растянут на всю ширину) -->
      <VBox spacing="8" style="-fx-background-color: #f5f5f5; -fx-border-color: #999; -fx-border-radius: 6; -fx-background-radius: 6;">
         <Label text="PROGRAM COUNTER" alignment="CENTER_LEFT" style="-fx-font-family: Consolas; -fx-font-weight: bold; -fx-font-size: 14; -fx-padding: 0 0 0 20;"/>
         <ListView fx:id="programCounterListView" prefHeight="70"
                   style="-fx-font-family: Consolas; -fx-font-size: 16; -fx-background-color: #fffff8;"/>
         <padding><Insets top="10" right="20" bottom="12" left="20"/></padding>
      </VBox>

      <!-- 4. Status Flags -->
      <VBox alignment="CENTER">
         <Label text="STATUS FLAGS:  – U T I O C S Z"
                visible="false"
                style="-fx-font-family: Consolas; -fx-font-size: 15; -fx-text-fill: #333;"/>
         <ListView fx:id="statusListView" prefHeight="50"
                   visible="false"
                   style="-fx-font-family: Consolas; -fx-font-size: 18; -fx-background-insets: 0;"/>
      </VBox>

   </VBox>
</AnchorPane>